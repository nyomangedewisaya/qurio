---
import MainLayout from '../../layouts/MainLayout.astro';
import DashboardShell from '../../components/dashboard/DashboardShell.jsx';
import { 
  BookOpen, Users, Target, Award, 
  TrendingUp, BarChart3, Clock, CheckCircle2, XCircle 
} from 'lucide-react';

// Dummy
const apiResponse = {
  success: true,
  data: {
    summary: {
      totalQuizzes: 24,
      activeQuizzes: 18,
      totalAttempts: 1250,
      globalAverageScore: 78.5,
      passRatePercentage: 82.4,
      avgDurationMinutes: 24.5
    },
    charts: {
      popularQuizzes: [
        { name: "Pemrograman Web...", totalPeserta: 450 },
        { name: "UI/UX Design...", totalPeserta: 320 },
      ],
      engagementTrend: [
        { date: "02-21", jumlahPengerjaan: 15 },
        { date: "02-22", jumlahPengerjaan: 42 },
      ]
    },
    recentActivity: [
      { attemptId: "1", participantName: "Budi Santoso", quizTitle: "Pemrograman Web Dasar", score: 85, status: "Lulus", timeAgo: "2 jam yang lalu" },
      { attemptId: "2", participantName: "Siti Aminah", quizTitle: "UI/UX Design Principles", score: 65, status: "Gagal", timeAgo: "5 jam yang lalu" },
      { attemptId: "3", participantName: "Andi Wijaya", quizTitle: "Database MySQL", score: 90, status: "Lulus", timeAgo: "1 hari yang lalu" },
      { attemptId: "4", participantName: "Rina Kumala", quizTitle: "Pemrograman Web Dasar", score: 75, status: "Lulus", timeAgo: "1 hari yang lalu" },
    ]
  }
};

const { summary, recentActivity } = apiResponse.data;
---

<MainLayout title="Dashboard Instruktur | Qurio">
  <DashboardShell client:load role="ADMIN" currentPath="/admin/dashboard">
    
    <div class="max-w-7xl mx-auto space-y-6">
      
      <div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-2">Ikhtisar Analitik</h2>
          <p class="text-slate-500 text-sm">Data di bawah ini mencakup seluruh performa kuis Anda.</p>
        </div>
        <div class="flex items-center gap-2 bg-white/60 border border-slate-200/60 px-4 py-2 rounded-xl shadow-sm">
          <Clock className="w-4 h-4 text-slate-400" />
          <span class="text-sm font-semibold text-slate-600">Rata-rata durasi: <span class="text-brand-600">{summary.avgDurationMinutes} mnt</span></span>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        
        <div class="glass-card bg-white/60 p-6 rounded-3xl border border-white flex items-start justify-between group hover:-translate-y-1 transition-all duration-300 shadow-[0_8px_30px_rgba(0,0,0,0.03)] hover:shadow-brand-500/10">
          <div>
            <p class="text-sm font-semibold text-slate-500 mb-1">Total Kuis</p>
            <h3 class="text-3xl font-black text-slate-800 tracking-tight">{summary.totalQuizzes}</h3>
            <p class="text-xs font-medium text-emerald-500 mt-2 flex items-center gap-1">
              <span class="bg-emerald-100 text-emerald-600 px-1.5 py-0.5 rounded-md">{summary.activeQuizzes}</span> Kuis Aktif
            </p>
          </div>
          <div class="w-12 h-12 bg-brand-50 text-brand-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform">
             <BookOpen className="w-6 h-6" /> 
          </div>
        </div>

        <div class="glass-card bg-white/60 p-6 rounded-3xl border border-white flex items-start justify-between group hover:-translate-y-1 transition-all duration-300 shadow-[0_8px_30px_rgba(0,0,0,0.03)] hover:shadow-sky-500/10">
          <div>
            <p class="text-sm font-semibold text-slate-500 mb-1">Total Pengerjaan</p>
            <h3 class="text-3xl font-black text-slate-800 tracking-tight">{summary.totalAttempts}</h3>
            <p class="text-xs font-medium text-sky-500 mt-2 flex items-center gap-1">
              <TrendingUp className="w-3 h-3" /> Partisipasi stabil
            </p>
          </div>
          <div class="w-12 h-12 bg-sky-50 text-sky-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform">
             <Users className="w-6 h-6" /> 
          </div>
        </div>

        <div class="glass-card bg-white/60 p-6 rounded-3xl border border-white flex items-start justify-between group hover:-translate-y-1 transition-all duration-300 shadow-[0_8px_30px_rgba(0,0,0,0.03)] hover:shadow-indigo-500/10">
          <div>
            <p class="text-sm font-semibold text-slate-500 mb-1">Rata-rata Skor</p>
            <h3 class="text-3xl font-black text-slate-800 tracking-tight">{summary.globalAverageScore}</h3>
            <p class="text-xs font-medium text-slate-400 mt-2">Dari seluruh kuis</p>
          </div>
          <div class="w-12 h-12 bg-indigo-50 text-indigo-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform">
             <Target className="w-6 h-6" /> 
          </div>
        </div>

        <div class="glass-card bg-white/60 p-6 rounded-3xl border border-white flex items-start justify-between group hover:-translate-y-1 transition-all duration-300 shadow-[0_8px_30px_rgba(0,0,0,0.03)] hover:shadow-orange-500/10">
          <div>
            <p class="text-sm font-semibold text-slate-500 mb-1">Tingkat Kelulusan</p>
            <h3 class="text-3xl font-black text-slate-800 tracking-tight">{summary.passRatePercentage}%</h3>
            <p class="text-xs font-medium text-slate-400 mt-2">Batas KKM: 70</p>
          </div>
          <div class="w-12 h-12 bg-orange-50 text-orange-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform">
             <Award className="w-6 h-6" /> 
          </div>
        </div>

      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mt-6">
        <div class="lg:col-span-2 glass-card bg-white/60 border border-white rounded-4xl p-6 sm:p-8 shadow-[0_8px_32px_rgba(0,0,0,0.02)] relative overflow-hidden flex flex-col">
          <h3 class="text-lg font-bold text-slate-800 mb-2">Tren Pengerjaan (7 Hari Terakhir)</h3>
          <p class="text-sm text-slate-500 mb-6">Distribusi partisipasi siswa setiap harinya.</p>
          
          <div class="flex-1 min-h-62.5 bg-slate-50/50 rounded-xl border border-dashed border-slate-200 flex flex-col items-center justify-center text-center p-6">
             <TrendingUp className="w-10 h-10 text-brand-300 mb-3" />
             <p class="text-slate-600 font-medium">Ruang untuk Line Chart (Recharts/Chart.js)</p>
             <p class="text-slate-400 text-xs mt-1">Data: <code class="bg-slate-100 px-1 rounded text-pink-500">apiResponse.data.charts.engagementTrend</code></p>
          </div>
        </div>

        <div class="glass-card bg-white/60 border border-white rounded-4xl p-6 sm:p-8 shadow-[0_8px_32px_rgba(0,0,0,0.02)] relative overflow-hidden flex flex-col">
          <h3 class="text-lg font-bold text-slate-800 mb-2">Kuis Terpopuler</h3>
          <p class="text-sm text-slate-500 mb-6">Berdasarkan jumlah attempt.</p>
          
          <div class="flex-1 min-h-62.5 bg-slate-50/50 rounded-xl border border-dashed border-slate-200 flex flex-col items-center justify-center text-center p-6">
             <BarChart3 className="w-10 h-10 text-sky-300 mb-3" />
             <p class="text-slate-600 font-medium">Ruang untuk Bar/Pie Chart</p>
             <p class="text-slate-400 text-xs mt-1">Data: <code class="bg-slate-100 px-1 rounded text-pink-500">charts.popularQuizzes</code></p>
          </div>
        </div>
      </div>

      <div class="mt-6 glass-card bg-white/60 border border-white rounded-4xl p-6 sm:p-8 shadow-[0_8px_32px_rgba(0,0,0,0.02)]">
        <h3 class="text-lg font-bold text-slate-800 mb-6">Aktivitas Pengerjaan Terbaru</h3>
        
        <div class="overflow-x-auto">
          <table class="w-full text-left border-collapse">
            <thead>
              <tr class="border-b border-slate-200/60 text-sm font-semibold text-slate-500">
                <th class="pb-4 pl-2 font-medium">Peserta</th>
                <th class="pb-4 font-medium">Kuis</th>
                <th class="pb-4 text-center font-medium">Skor</th>
                <th class="pb-4 font-medium">Status</th>
                <th class="pb-4 text-right pr-2 font-medium">Waktu</th>
              </tr>
            </thead>
            <tbody>
              {recentActivity.map((activity) => (
                <tr class="border-b border-slate-100/50 hover:bg-white/40 transition-colors group">
                  <td class="py-4 pl-2">
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 rounded-full bg-slate-100 text-slate-500 flex items-center justify-center text-xs font-bold uppercase">
                        {activity.participantName.substring(0, 2)}
                      </div>
                      <span class="font-semibold text-slate-800 group-hover:text-brand-600 transition-colors">{activity.participantName}</span>
                    </div>
                  </td>
                  <td class="py-4 text-slate-600 text-sm">{activity.quizTitle}</td>
                  <td class="py-4 text-center">
                    <span class="font-bold text-slate-800">{activity.score}</span>
                  </td>
                  <td class="py-4">
                    <div class={`inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md text-[13px] font-bold ${activity.status === 'Lulus' ? 'bg-emerald-50 text-emerald-600 border border-emerald-200/50' : 'bg-red-50 text-red-600 border border-red-200/50'}`}>
                      {activity.status === 'Lulus' ? <CheckCircle2 className="w-3.5 h-3.5" /> : <XCircle className="w-3.5 h-3.5" />}
                      {activity.status}
                    </div>
                  </td>
                  <td class="py-4 text-right pr-2 text-sm text-slate-400">{activity.timeAgo}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

    </div>

  </DashboardShell>
</MainLayout>